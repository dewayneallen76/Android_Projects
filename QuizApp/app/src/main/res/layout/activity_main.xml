<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/name_field"
            style="@style/EditTextStyle"
            android:hint="Name" />

        <TextView
            style="@style/QuestionTextStyle"
            android:text="@string/question_1" />

        <CheckBox
            android:id="@+id/checkbox1_question1"
            style="@style/AnswerTextStyle"
            android:text="Tony Parker" />

        <CheckBox
            android:id="@+id/checkbox2_question1"
            style="@style/AnswerTextStyle"
            android:text="Manu Ginobili" />

        <CheckBox
            android:id="@+id/checkbox3_question1"
            style="@style/AnswerTextStyle"
            android:text="Lamarcus Aldridge" />

        <CheckBox
            android:id="@+id/checkbox4_question1"
            style="@style/AnswerTextStyle"
            android:text="Kawhi Leonard" />

        <TextView
            style="@style/QuestionTextStyle"
            android:text="@string/question_2" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton1_question2"
                style="@style/AnswerTextStyle"
                android:text="1996" />

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="1986" />

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="1999" />

        </RadioGroup>

        <TextView
            style="@style/QuestionTextStyle"
            android:text="@string/question_3" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="Notre Dame" />

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="United States Air Force Academy" />

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="United States Naval Academy" />

        </RadioGroup>

        <TextView
            style="@style/QuestionTextStyle"
            android:text="@string/question_4" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="2004" />

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="2005" />

            <RadioButton
                style="@style/AnswerTextStyle"
                android:text="2002" />
        </RadioGroup>

        <TextView
            style="@style/QuestionTextStyle"
            android:text="@string/question_5" />

        <EditText
            android:id="@+id/best_player_field"
            style="@style/EditTextStyle"
            android:hint="Best Player" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/ScoreTextStyle"
                android:text="SCORE:" />

            <TextView
                android:id="@+id/score_text_view"
                style="@style/ScoreTextStyle"
                android:paddingLeft="16dp"
                android:text="0" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_button"
                style="@style/ButtonStyle"
                android:onClick="submitQuiz"
                android:text="Submit" />

            <Button
                android:id="@+id/reset_button"
                style="@style/ButtonStyle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:onClick="resetQuiz"
                android:text="Reset Quiz" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>